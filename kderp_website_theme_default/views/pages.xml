<?xml version="1.0" encoding="utf-8" ?>
<openerp>
<data>   
		
	<!-- Home page: Trung id phai xoa view da tao ra trong view TODO -->
	<template id="website.homepage" name="KDVN Homepage" page="True" priority="10">
		<t t-call="website.layout">
			<div id="wrap" class="oe_structure oe_empty">
				<div id="jumbo"></div>
				<!-- Tin moi va cac du an -->
				<section>
					<div class="container">
						<!-- Brief introduction -->
						<div class="row">
							<div class="col-md-3">
								<h4 class="text-success">Lastest News</h4>
								<div class="col-md-12">
									<p></p>
									<!-- News: Option to show on/off in customize menu-->
									<div id="kdvn_news">
									</div>
								</div>
							</div>
							<!-- <h1 class="bg-kdvn pt16 pb16"><span class="text-kdvn">About us... <a href="/website/image/ir.attachment/621_fcac2f1/datas/KINDEN%20VIETNAM%20Brochure%202014.pdf" download="KDVN_brochure"><span class="fa fa-file-pdf-o fa-3" style="color:white"></span></a></span></h1> -->
							<div class="col-md-9">
								<div class="row">
									<t t-foreach="kdvn_me" t-as="post">
										<!-- Links intro -->
										<t t-if="post.name == 'Electrical Systems'"><t t-set="post_url" t-value="'/intro/kdvn/electricalsystems'"></t></t>
										<t t-if="post.name == 'Mechanical Systems'"><t t-set="post_url" t-value="'/intro/kdvn/aircon'"></t></t>
										<t t-if="post.name == 'QST'"><t t-set="post_url" t-value="'/qa/what_is_qa'"></t></t>
										<div t-attf-class="col-md-{{12 / post_size}}">
										<!-- Link news -->
										<t t-if="post.name == 'Electrical Systems'"><t t-set="post_url_more" t-value="'/es/news'"></t></t>
										<t t-if="post.name == 'Mechanical Systems'"><t t-set="post_url_more" t-value="'/ms/news'"></t></t>
										<t t-if="post.name == 'QST'"><t t-set="post_url_more" t-value="'/qa/news'"></t></t>
											<h4 class="text-success"><t t-raw="post.name.title()"></t></h4>
											<p></p>
											<div class="thumbnail">
												<a t-att-href="post_url"><img class="img-responsive" t-att-src="post.img_url_ids[0].website_url"></img></a>										
											</div>
											<div class="caption">
												<!-- <h2 class="text-success"><t t-raw="post.name.title()"></t></h2> -->
												<p class="mt8" style="overflow: auto; height:200px" ><t t-esc="post.summary"></t><a class="view-more" t-att-href="post_url_more">View more <span class="icon-view-more"></span></a></p>
											</div>
										</div>
										
									</t>
								</div>
								<div class="row">
									<p></p>
									<t t-foreach="kdvn_me" t-as="post">
										<div t-attf-class="col-md-{{12 / post_size}}">
											<t t-if="post.name == 'Electrical Systems'"><div id="kdvn_news_e"></div></t>
											<t t-if="post.name == 'Mechanical Systems'"><div id="kdvn_news_m"></div></t>
											<t t-if="post.name == 'QST'"><div id="kdvn_news_q"></div></t>
										</div>
									</t>
								</div>
							</div>
						</div>
					</div>
				</section>
			</div>
		</t>
	</template>
	
	<!-- Jumbo options for homepage -->
	<template id="kderp_website.home_jumbo" name="Home jumbo" inherit_id="website.homepage" active="False" customize_show="True">
		<xpath expr="//div[@id='jumbo']" position="inside">
			<div id="worksCaroudelhp" class="carousel slide carouselhp" data-ride="carousel">
				<!-- Indicators -->
				<ol class="carousel-indicators">
					<t t-foreach="kdvn_works" t-as="work">
						<li data-target="#worksCaroudelhp" t-att-data-slide-to="str(work_index)" t-att-class="'active' * (work_index == 0)"></li>
					</t>
				</ol>
				
				<!-- Wrapper for slides -->
				<div class="carousel-inner carouselhp-inner" role="listbox">
					<t t-foreach="kdvn_works" t-as="work">
						<div t-att-class="'item ' + 'active' * (work_index == 0)">
							<img t-attf-src="{{work.img_url_ids[0].website_url}}"></img>
							<div class="carousel-caption carouselhp-caption">
								<h3><t t-esc="work.name"></t></h3>
							</div>
						</div>
					</t>
				</div>	
				<a class="left carousel-control" data-target="#worksCaroudelhp" role="button" data-slide="prev">
					<span class="fa fa-caret-left"></span>
				</a>
				<a class="right carousel-control" data-target="#worksCaroudelhp" role="button" data-slide="next">
					<span class="fa fa-caret-right"></span>
				</a>
			</div>	
		</xpath>
	</template>
	
	<!-- KDVN News showing in homepage -->
	<template id="home_news" name="Home News" inherit_id="website.homepage" active="False" customize_show="True">
		<xpath expr="//div[@id='kdvn_news']" position="inside">
			<t t-set="posts" t-value="kdvn_news[:8]"></t>
			<t t-call="kderp_website.list_posts_homepage"></t>
			<p class="text-right"><a href="/intro/news" alt="More news">More News...</a></p>			
		</xpath>

	</template>
	
	<!-- KDVN News showing in homepage e -->
	<template id="home_news_e" name="Home News E" inherit_id="website.homepage" active="False" customize_show="True">
		<xpath expr="//div[@id='kdvn_news_e']" position="inside">
			<t t-set="posts" t-value="kdvn_news_e"></t>
			<t t-call="kderp_website.list_posts_ge"></t>	
		</xpath>
	</template>
	
	<!-- KDVN News showing in homepage m -->
	<template id="home_news_m" name="Home News M" inherit_id="website.homepage" active="False" customize_show="True">
		<xpath expr="//div[@id='kdvn_news_m']" position="inside">
			<t t-set="posts" t-value="kdvn_news_m"></t>
			<t t-call="kderp_website.list_posts_ge"></t>	
		</xpath>
	</template>
	
	<!-- KDVN News showing in homepage q -->
	<template id="home_news_q" name="Home News Q" inherit_id="website.homepage" active="False" customize_show="True">
		<xpath expr="//div[@id='kdvn_news_q']" position="inside">
			<t t-set="posts" t-value="kdvn_news_q"></t>
			<t t-call="kderp_website.list_posts_ge"></t>	
		</xpath>
	</template>
	
	<!-- Lists Posts Home Page -->
	<template id="kderp_website.list_posts_homepage" name="KDVN Lists Posts">
		<div class="container">
			<div class="row">
				<t t-if="request.httprequest.path in ['/page/homepage']">
				<table class="table">
					<tbody>
						<t t-foreach="posts" t-as="post">
						<tr>
							<td class="news-date-hompage"><span t-field="post.create_date" t-field-options='{"format": "MMM, dd y"}'></span></td>
							<t t-if="post.img_url_ids">
								<t t-if="post.img_url_ids[0].name[-3:] == 'pdf'">
									<t t-set="fa_value" t-value="'fa-file-pdf-o'"></t>
								</t>
								<t t-if="post.img_url_ids[0].name[-3:] == 'doc'">
									<t t-set="fa_value" t-value="'fa-file-word-o'"></t>
								</t>
								<t t-if="post.img_url_ids[0].name[-3:] == 'xls'">
									<t t-set="fa_value" t-value="'fa-file-excel-o'"></t>
								</t>
								<t t-if="post.img_url_ids[0].name[-3:] not in ['pdf', 'doc', 'xls']">
									<t t-set="fa_value" t-value="'fa-file-image-o'"></t>
								</t>
							</t>
							<td class="news-name-homepage" style="border-top: 1px solid #FFF;"><span t-if="post.img_url_ids" t-attf-class="fa {{fa_value}}"></span><a t-attf-href="{{'/intro/news' if request.httprequest.path == '/page/homepage' else request.httprequest.path}}/{{slug(post)}}"> 
								<t t-raw="post.name[:40].title()"></t>
								<t t-if="post.name[41:]"><span>...</span></t></a>
							</td>
						</tr>
						</t>
					</tbody>
				</table>
				</t>	
			</div>					
		</div>
	</template>
	
	<!-- lists Posts for kdvn_news_ge -->
	<template id="kderp_website.list_posts_ge" name="KDVN Lists Posts GE">
		<div class="container">
			<!-- Posts -->
			<table class="table" style="font-size:12px">
				<tbody>
					<t t-foreach="posts" t-as="post">
						<tr>
							<t t-if="post.img_url_ids">
								<t t-if="post.img_url_ids[0].name[-3:] == 'pdf'">
									<t t-set="fa_value" t-value="'fa-file-pdf-o'"></t>
								</t>
								<t t-if="post.img_url_ids[0].name[-3:] == 'doc'">
									<t t-set="fa_value" t-value="'fa-file-word-o'"></t>
								</t>
								<t t-if="post.img_url_ids[0].name[-3:] == 'xls'">
									<t t-set="fa_value" t-value="'fa-file-excel-o'"></t>
								</t>
								<t t-if="post.img_url_ids[0].name[-3:] not in ['pdf', 'doc', 'xls']">
									<t t-set="fa_value" t-value="'fa-file-image-o'"></t>
								</t>
							</t>
							<td><span t-if="post.img_url_ids" t-attf-class="fa {{fa_value}}"></span><a t-attf-href="{{'/intro/news' if request.httprequest.path == '/page/homepage' else request.httprequest.path}}/{{slug(post)}}"> <t t-raw="post.name.title()"></t></a></td>
						</tr>
					</t>
				</tbody>
			</table>				
		</div>
	</template>
	
</data>
</openerp>