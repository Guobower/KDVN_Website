	<!--Ke thua template Jobs-->
	<template id="kderp_website_theme_default_thuy2.jobs_index" name="KDVN Thuy2 Jobs Index" inherit_id="website_hr_recruitment.index">
		<xpath expr="//div[@id='wrap']/div[@class='container oe_website_jobs']/div[@class='row']/div[@id='jobs_grid']" position="attributes">
			<attribute name="class">col-md-offset-3 col-md-6</attribute>
		</xpath>
		<xpath expr="//div[@id='wrap']/div[@class='oe_structure']/section[@class='mb16']/div[@class='container']" position="replace">
			<div class="oe_structure"/>
			<div class="container">
				<div class="row">
					<div class="col-md-12 text-center mb16" data-snippet-id="colmd">
						<h2>Our Job Offers</h2>
					</div>
				</div>
			</div>
		</xpath>
		<!--Thay ngay write_date thanh date_deadline -->
		<xpath expr="//div[@id='wrap']/div[@class='container oe_website_jobs']/div[@class='row']/div[@id='jobs_grid']/ul[@class='media-list']/li[@class='media']/div[@class='media-body']/div[@class='text-muted']" position="replace">
			<div class="text-muted">
				<i class="fa fa-clock-o"/> <span>Deadline : </span><span t-field="job.date_deadline" t-field-options='{"format":"dd-MM-y"}'/><br />
				<i class="fa fa-star"/> <span>Code : </span><span t-field="job.code"/><br />
				<i class="fa fa-link"/> <span>Link : <a t-attf-href="#{job.job_link}" target="_blank">Job link</a></span>
			</div>
		</xpath>
		<!--Thay h3 thanh h4-->
		<xpath expr="//div[@id='wrap']/div[@class='container oe_website_jobs']/div[@class='row']/div[@id='jobs_grid']/ul[@class='media-list']/li[@class='media']/div[@class='media-body']/h3[@class='media-heading']" position="replace">
			<h4 class="media-heading">
                <a t-attf-href="/jobs/detail/#{ slug(job) }">
                    <span t-field="job.name"/>
                </a>
                <small t-if="job.no_of_recruitment &gt; 1">
                    <t t-esc="job.no_of_recruitment"/> open positions
                </small>
            </h4>
		</xpath>
	</template>
	<template id="kderp_website_theme_default_thuy2.jobs_detail" name="KDVN Thuy2 Jobs detail" inherit_id="website_hr_recruitment.detail">
		<!--Thay ngay write_date thanh date_deadline -->
		<xpath expr="//div[@id='wrap']/div[@class='oe_structure']/h5[@class='text-center text-muted']" position="replace">
			<h5 class="text-center text-muted">
                <i class="fa fa-clock-o"/> <span>Deadline : </span><span t-field="job.date_deadline" t-field-options='{"format":"dd-MM-y"}'/>
            </h5>
		</xpath>
		<!--Dua noi dung vao class container-->
		<xpath expr="//div[@id='wrap']/div[@t-field='job.website_description']" position="replace">
			<section class="mt16 mb16">
				<div class="container">
					<div class="row">
						<div class="col-md-2"/>
						<div class="col-md-8">
							<!--<div t-field="job.website_description"/>-->
							<table border="0" cellpadding="0" cellspacing="0">
								<tbody>
									<tr style="border-bottom: 1px solid #026232">
										<td style="vertical-align:middle"><strong>Job Title:</strong></td>
										<td style="vertical-align:middle"><strong><div t-field="job.name"/></strong></td>
									</tr>
									<tr style="border-bottom: 1px solid #026232;">
										<td style="vertical-align:middle"><strong>Job Code:</strong></td>
										<td style="vertical-align:middle"><div t-field="job.code"/></td>
									</tr>
									<tr style="border-bottom: 1px solid #026232;">
										<td style="vertical-align:middle"><strong>Job Description:</strong></td>
										<td style="vertical-align:middle"><div t-field="job.description"/>
										</td>
									</tr>
									<tr style="border-bottom: 1px solid #026232;">
										<td style="vertical-align:middle"><strong>Job Requirement:</strong></td>
										<td style="vertical-align:middle"><div t-field="job.requirements"/></td>
									</tr>
									<tr style="border-bottom: 1px solid #026232;">
										<td style="vertical-align:middle"><strong>Preferred language:</strong></td>
										<td style="vertical-align:middle"><div t-field="job.job_language_id.name"/></td>
									</tr>
									<tr style="border-bottom: 1px solid #026232;">
										<td style="vertical-align:middle"><strong>Job Level:</strong></td>
										<td style="vertical-align:middle"><div t-field="job.job_level_id.name"/></td>
									</tr>
									<tr style="border-bottom: 1px solid #026232;">
										<td style="vertical-align:middle"><strong>Work Place:</strong></td>
										<td style="vertical-align:middle"><div t-field="job.job_work_place_id.name"/></td>
									</tr>
								</tbody>
							</table>
						</div>
						<div class="col-md-2"/>
					</div>
				</div>
			</section>
		</xpath>
		<!--Thay doi mau cua nut bam Apply-->
		<xpath expr="//div[@id='wrap']/div[@class='oe_structure']/section[@class='mt16 mb16']/div[@class='container']/div[@class='row']/div[@class='col-md-12 text-center mt16 mb16']" position="replace">
			<div class="col-md-12 text-center mt16 mb16">
				<a t-attf-href="/jobs/apply/#{ job.id }" class="btn btn-primary btn-lg">Apply</a>
			</div>
		</xpath>
	</template>
	
	
	<template id="kderp_website_theme_default_thuy2.jobs_apply" name="KDVN Thuy2 Jobs apply" inherit_id="website_hr_recruitment.apply">
		<!--Dua banner vao form application jobs-->
		<xpath expr="//div[@id='wrap']/div[@class='container']" position="before">
