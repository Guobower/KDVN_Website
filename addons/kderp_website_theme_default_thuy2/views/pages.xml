	<!--=== header ===-->
	<!--LOGO OHSAS-->
	<template id="kderp_website_theme_default_thuy2.wrapwrap" name="KDVN Thuy2 header" inherit_id="kderp_website_theme_default_thuy1.wrapwrap">
		<xpath expr="//div[@class='container']/div[@class='navbar-header']/span/img[@src='/website/image/ir.attachment/1800_ce1e93d/datas/50x50']" position="replace">
			<img src="/website/image/ir.attachment/2558_ed44260/datas/100x50" alt="Logo ISO and OHSAS" title="ISO and OHSAS"/>
		</xpath>
		<!--Them lua chon ngon ngu trong giao dien mobile-->
		<xpath expr="//div[@class='container']/div[@class='collapse navbar-collapse navbar-top-collapse']" position="inside">
			<ul class="list-inline js_language_selector display-lg" t-if="(request.website_multilang and len(languages) &gt; 1) or editable">
				<li t-foreach="languages" t-as="lg">
					<a t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang=lg[0])"
					 t-att-data-default-lang="editable and 'true' if lg[0] == website.default_lang_code else None">
					 <img t-att-src="website.image_url(lg[2], 'flag_image')" height="20" width="30"  t-att-title="lg[1]" />
					</a>
				</li>
				<li groups="base.group_website_publisher">
					<t t-set="url_return" t-value="url_for('', '[lang]') + '?' + keep_query()"/>
					<a t-attf-href="/web#action=base.action_view_base_language_install&amp;website_id=#{website.id}&amp;url_return=#{url_return}">
					</a>
				</li>
			</ul>
		</xpath>
		<xpath expr="//div[@class='container']" position="before">
			<div class="container" style="padding-top: 5px; padding-bottom: 5px;">
				<!--dua logo kinden vietnam len tren-->
				<div class="brand">
					<a href="/" class="logo">
						<img src="/website/image/ir.attachment/2532_249831d/datas" het-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name" width="100" height="60"/>
					</a>
					<span>
						<img src="/website/image/ir.attachment/2558_ed44260/datas/100x50" alt="Logo ISO and OHSAS" title="ISO and OHSAS"/>
						<!--
						<img src="/website/image/ir.attachment/2088_46ca30e/datas/50x50" alt="Logo of OHSAS" title="OHSAS"/>
						<img src="/website/image/ir.attachment/2087_8132346/datas/50x50" alt="Logo of ISO" title="ISO"/>
						-->
					</span>
				</div>
				<!-- hien thu ten cong ty va sdt -->
				<div class="brand-left">

					<t t-foreach="res_company.partner_id.child_ids[3:4]" t-as="contact">
						<div >
							<ul class="list-inline js_language_selector" t-if="(request.website_multilang and len(languages) &gt; 1) or editable">
								<li><b>KINDEN VIETNAM CO., LTD</b></li>
								<li t-foreach="languages" t-as="lg">
									<a t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang=lg[0])"
									 t-att-data-default-lang="editable and 'true' if lg[0] == website.default_lang_code else None">
									 <img t-att-src="website.image_url(lg[2], 'flag_image')" height="20" width="30"  t-att-title="lg[1]" />
									</a>
								</li>
								<li groups="base.group_website_publisher">
									<t t-set="url_return" t-value="url_for('', '[lang]') + '?' + keep_query()"/>
									<a t-attf-href="/web#action=base.action_view_base_language_install&amp;website_id=#{website.id}&amp;url_return=#{url_return}">
									</a>
								</li>
							</ul>
							<address style="margin-bottom: 0px; margin-right: 5px;">
							<span class="fa fa-phone"></span> <t t-esc="contact.phone"></t><br/>
							<span class="fa fa-fax"></span> <t t-esc="contact.fax"></t>
							</address>
						</div>
					</t>
				</div>
			</div>
		</xpath>
		<xpath expr="//header/div[@class='navbar navbar-custom navbar-static-top']/div[@class='container']/div[@class='collapse navbar-collapse navbar-top-collapse']/ul[contains(@class, 'nav navbar-nav navbar-right')]" position="attributes">
			<attribute name="class">nav navbar-nav</attribute>
		</xpath>
	</template>

