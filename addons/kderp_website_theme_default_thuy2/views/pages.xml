	<!-- Tin tuc QSA trong News khong hien thi khi chua dang nhap-->
	<template id="kderp_website_theme_default_thuy2.news_qsa" name="KDVN Thuy2 News QSA" inherit_id="kderp_website_theme_default_thuy1.list_posts">
		<xpath expr="//div[@id='list-main']" position="replace">
			<div id="list-main" t-att-class="customize_class" style="padding-bottom:40px">
		        <t t-foreach="posts" t-as="post">
					<t t-if="post.img_url_ids">
						<t t-if="post.img_url_ids[0].name[-3:] == 'pdf'">
							<t t-set="fa_value" t-value="'fa-file-pdf-o'"></t>
						</t>
						<t t-if="post.img_url_ids[0].name[-3:] == 'doc'">
							<t t-set="fa_value" t-value="'fa-file-word-o'"></t>
						</t>
						<t t-if="post.img_url_ids[0].name[-3:] == 'xls'">
							<t t-set="fa_value" t-value="'fa-file-excel-o'"></t>
						</t>
						<t t-if="post.img_url_ids[0].name[-3:] not in ['pdf', 'doc', 'xls']">
							<t t-set="fa_value" t-value="'fa-file-image-o'"></t>
						</t>
					</t>
					<t t-if="not post.img_url_ids">
						<t t-set="fa_value" t-value="'fa-file-image-o'"></t>
					</t>
					<t t-if="request.context.get('lang')=='en_US'">
						<t t-set="list_post_lable" t-value="[
							('General News','General News'),
							('IT','IT'),
							('Quality Safety Assurance','Quality Safety Assurance'),
							('Electrical Systems','Electrical Systems'),
							('Mechanical Systems','Mechanical Systems')]"/>
					</t>
					<t t-if="request.context.get('lang')=='vi_VN'">
						<t t-set="list_post_lable" t-value="[
							('General News','Tin tức chung'),
							('IT','IT'),
							('Quality Safety Assurance','Quản lý chất lượng'),
							('Electrical Systems','Hệ thống điện'),
							('Mechanical Systems','Hệ thống cơ')]"/>
					</t>
					<t t-if = "post.blog_id.name != 'Quality Safety Assurance'" >
						<div class="list-group-item" style="border-left:0px;border-right:0px;">
							<h4 style="line-height:1.5" >
								<t t-foreach="list_post_lable" t-as="lable">
									<t t-if="lable[0]==post.blog_id.name">
										<span class="label label-default"><t t-esc="lable[1]"></t></span>
									</t>
								</t>
								<span t-if="post.img_url_ids" t-attf-class="fa {{fa_value}}"></span>

								<a t-attf-href="{{'/intro/news' if request.httprequest.path == '/page/homepage' else request.httprequest.path}}/{{slug(post)}}">
									<t t-raw="post.name.title()"></t>
								</a>
							</h4>
							<p class="blog-post-meta" style="margin-top: 0px;"><span t-field="post.create_date" t-field-options='{"format":"MMMM dd, y"}'></span><span> by </span><t t-esc="post.author_id.name"></t></p>
							<p><t t-esc="post.summary"></t></p>
						</div>
					</t>
					<t t-if = "request.uid != request.website.user_id.id and post.blog_id.name == 'Quality Safety Assurance'">
						<div class="list-group-item" style="border-left:0px;border-right:0px;">
							<h4 style="line-height:1.5" >
								<t t-foreach="list_post_lable" t-as="lable">
									<t t-if="lable[0]==post.blog_id.name">
										<span class="label label-default"><t t-esc="lable[1]"></t></span>
									</t>
								</t>
								<span t-if="post.img_url_ids" t-attf-class="fa {{fa_value}}"></span>
								<a t-attf-href="{{'/intro/news' if request.httprequest.path == '/page/homepage' else request.httprequest.path}}/{{slug(post)}}">
									<t t-raw="post.name.title()"></t>
								</a>
							</h4>
							<p class="blog-post-meta" style="margin-top: 0px;"><span t-field="post.create_date" t-field-options='{"format":"MMMM dd, y"}'></span><span> by </span><t t-esc="post.author_id.name"></t></p>
							<p><t t-esc="post.summary"></t></p>
						</div>
					</t>
				</t>
			</div>
		</xpath>
	</template>

	<!--Translate KINDEN VIETNAM-->
	<template id="kderp_website_theme_default_thuy2.kdvn" name="KDVN Thuy2 KDVN" inherit_id="kderp_website.intro_jumbo">
		<xpath expr="//div[@class='container']/div[@class='navbar navbar-custom navbar-right']/ul[@class='nav navbar-nav']" position="replace">
			<t t-if="request.context.get('lang')=='en_US'">
				<t t-set="abt_menus" t-value="[('aboutus','About us'),
					('electricalsystems','Electrical'),
					('aircon','Mechanical')]">
				</t>
			</t>
			<t t-if="request.context.get('lang')=='vi_VN'">
				<t t-set="abt_menus" t-value="[('aboutus','Giới thiệu'),
					('electricalsystems','Hệ thống điện'),
					('aircon','Hệ thống cơ')]">
				</t>
			</t>
			<ul class="nav navbar-nav">
				<t t-foreach="abt_menus" t-as="submenu">
					<li  t-att-class="(request.httprequest.path.endswith('/' and submenu[0])) and 'active'"><a t-attf-href="/intro/kdvn/{{submenu[0]}}"><t t-esc="submenu[1]"></t></a></li>
				</t>
