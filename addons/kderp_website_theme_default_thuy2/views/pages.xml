	<template id="kderp_website_theme_default_thuy2.contactus_thanks" name="KDVN Thuy2 Contacts Thanks" inherit_id="website_crm.contactus_thanks">
		<xpath expr="//div[@id='wrap']/div[@class='container']/h1" position="replace">
			<h1>Thank you!</h1>
			<div class="container">
