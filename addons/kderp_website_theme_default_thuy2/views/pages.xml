	<!--Sua lai dinh dang ngay trong bai viet-->
	<template id="kderp_website_theme_default_thuy2.show_post" name="KDVN Thuy2 Show Post" inherit_id="kderp_website_theme_default_thuy1.show_post">
		<xpath expr="//div[@class='container show-post']/div[@class='col-sm-10']/div[@class='blog-header']/p[@class='blog-post-meta']" position="replace">
			<p class="blog-post-meta"><span t-field="post.create_date" t-field-options='{"format":"MMMM dd, y"}'></span><span> by </span><t t-esc="post.author_id.name"></t></p>
