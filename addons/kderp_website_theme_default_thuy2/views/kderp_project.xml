<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
	<!-- Them cac truong vao Blog Post-->
	<record model="ir.ui.view" id="kdvn_post_inherit_form">
		<field name="name">kdvn.post.inherit.form</field>
		<field name="model">blog.post</field>
		<field name="inherit_id" ref='kderp_website.kdvn_post_form'/>
		<field name="arch" type="xml" > 
			<xpath expr="//form/group" position="before">
				<div attrs="{'invisible': [('blog_name', 'not in', ['Projects Featured','Projects Completed'])]}">
					<group col="4" string="Project Des.">			
						<field name="project_location_id" on_change="onchange_location_city(project_location_id)"/>
						<field name="area_id" on_change="onchange_location_city(project_location_id)"/>
						<field name="city_id" on_change="onchange_location_city(project_location_id)"/>
						<field name="completion_date" on_change="onchange_year(completion_date,project_year_id)"/>
						<field name="type"/>
						<field name="size"/>
						<field name="project_year_id" on_change="onchange_year(completion_date,project_year_id)"/>
						<field name="blog_name" invisible='1'/>
						
					</group>
					<div class="oe_horizontal_separator oe_clear ">
						Project Info
					</div>
				</div>			
			</xpath>
			
		</field>
	</record>
	<!-- Year -->
	<record id="view_kderp_blog_post_year_form" model="ir.ui.view">
        <field name="name">kderp.blog.post.year.form</field>
        <field name="model">kderp.blog.post.year</field>
        <field name="arch" type="xml">
            <form string="Area">
				<sheet>
					<group col="4">
						<field name="code"/>
						<field name="name"/>
					</group>
				</sheet>
			</form>
        </field>
    </record>
	<record id="view_kderp_blog_post_year_tree" model="ir.ui.view">
        <field name="name">kderp.blog.post.year.tree</field>
        <field name="model">kderp.blog.post.year</field>
        <field name="arch" type="xml">
            <tree string="Area">
				<field name="code"/>
				<field name="name"/>
			</tree>
        </field>
    </record>
	<!-- Type -->
	<record id="view_kderp_blog_post_project_type_form" model="ir.ui.view">
        <field name="name">kderp.blog.post.project.type.form</field>
        <field name="model">kderp.blog.post.project.type</field>
        <field name="arch" type="xml">
            <form string="Type">
				<sheet>
					<group col="4">
						<field name="code"/>
						<field name="name"/>
					</group>
				</sheet>
			</form>
        </field>
    </record>
	<record id="view_kderp_blog_post_project_type_tree" model="ir.ui.view">
        <field name="name">kderp.blog.post.project.type.tree</field>
        <field name="model">kderp.blog.post.project.type</field>
        <field name="arch" type="xml">
            <tree string="Type">
				<field name="code"/>
				<field name="name"/>
			</tree>
        </field>
    </record>

	<!-- Size -->
	<record id="view_kderp_blog_post_project_size_form" model="ir.ui.view">
        <field name="name">kderp.blog.post.project.size.form</field>
        <field name="model">kderp.blog.post.project.size</field>
        <field name="arch" type="xml">
            <form string="Size">
				<sheet>
					<group col="4">
						<field name="code"/>
						<field name="name"/>
					</group>
				</sheet>
			</form>
        </field>
    </record>
	<record id="view_kderp_blog_post_project_size_tree" model="ir.ui.view">
        <field name="name">kderp.blog.post.project.size.tree</field>
        <field name="model">kderp.blog.post.project.size</field>
        <field name="arch" type="xml">
            <tree string="Size">
				<field name="code"/>
				<field name="name"/>
			</tree>
        </field>
    </record>
    <!-- Location"-->
	<record id="view_kderp_location_form" model="ir.ui.view">
        <field name="name">kderp.location.form</field>
        <field name="model">kderp.location</field>
        <field name="arch" type="xml">
            <form string="Location">
				<sheet>
					<group col="4" >
						<field name="code"/>
						<field name="name"/>
						<field name="city_id"/>
						<field name="city_code"/>
						<field name="area_id"/>
						<field name="description"/>
					</group>
				</sheet>
			</form>
        </field>
    </record>
	<record id="view_kderp_location_tree" model="ir.ui.view">
        <field name="name">kderp.location.tree</field>
