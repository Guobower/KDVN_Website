	</record>

	<menuitem id="kderp_website_config_project" name="Project" parent="kderp_website.kdvn_website_config"/>
	
	<menuitem id="kdvn_blog_post_year" name="Project Year" parent="kderp_website_config_project" action="kdvn_blog_post_year_act"/>
	<menuitem id="kdvn_blog_post_project_type" name="Project Type" parent="kderp_website_config_project" action="kdvn_blog_post_project_type_act"/>
	<menuitem id="kdvn_blog_post_project_size" name="Project Size" parent="kderp_website_config_project" action="kdvn_blog_post_project_size_act"/>
	
	<menuitem id="kdvn_location" name="Location" parent="kderp_website_config_project" action="kdvn_location_act"/>
