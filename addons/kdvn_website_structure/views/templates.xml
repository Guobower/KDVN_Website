    <!-- Home page: KDVN Slice Show in homepage-->
    <template id="kdvn_str_homepage_jumbo" name="Kdvn Structure Homepage jumbo" inherit_id="website.homepage" active="True" customize_show="True">
        <xpath expr="//section[@id='sec_kdvn_homepage_jumbo']" position="inside">
            <div id="kdvn_str_worksCarousel" class="carousel slide" data-ride="carousel" data-interval="100">				
                <ol class="carousel-indicators">
                    <t t-foreach="kdvn_works" t-as="work">
                        <li data-target="#kdvn_str_worksCarousel" t-att-data-slide-to="str(work_index)" t-att-class="'active' * (work_index == 0)"></li>
                    </t>
                </ol>					
                <div class="carousel-inner" role="listbox">
                    <t t-foreach="kdvn_works" t-as="work">
                        <div t-att-class="'item ' + 'active' * (work_index == 0)">
                            <t t-if="work.img_url_ids">
                                <div t-attf-style="background:url({{work.img_url_ids[0].website_url}}) center center; background-size:cover; width: 100%;height:450px ">
                                    <div class="carousel-caption">
                                        <h3><t t-esc="work.name"></t></h3>
                                    </div>
                                </div>
                            </t>
                            <t t-if="not(work.img_url_ids)">
                                <div style="background:url('/kdvn_website/static/src/img/images/image.png') center center; background-size:cover; width: 100%;height:450px">													
                                    <div class="carousel-caption">
                                        <h3><t t-esc="work.name"></t></h3>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                </div>
                <a class="left carousel-control" data-target="#kdvn_str_worksCarousel" role="button" data-slide="prev">
                    <span class="fa fa-caret-left"></span>
                </a>
                <a class="right carousel-control" data-target="#kdvn_str_worksCarousel" role="button" data-slide="next">
                    <span class="fa fa-caret-right"></span>
                </a>
            </div>
        </xpath>
    </template>
