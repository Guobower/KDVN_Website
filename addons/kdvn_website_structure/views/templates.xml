	<template id="kdvn_str_contacts" name="Kdvn Structure Contacts">
		<t t-call="website.layout">
			<t t-set="title">How to contact us</t>
			<div class="oe_structure">
				<div class="container">
					<section class="oe_snippet_body container" style="background:url(/kdvn_website_structure/static/src/img/default/banner_gn.jpg) center center; background-size:cover;min-height: 300px;">				
