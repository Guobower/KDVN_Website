<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
	<!--Ke thua template Jobs-->
	<template id="kdvn_str_jobs_index" name="Kdvn Theme Jobs Index" inherit_id="website_hr_recruitment.index">
		<xpath expr="//div[@id='wrap']/div[@class='container oe_website_jobs']/div[@class='row']/div[@id='jobs_grid']" position="attributes">
			<attribute name="class">col-md-offset-3 col-md-6</attribute>
		</xpath>
		<xpath expr="//div[@id='wrap']/div[@class='oe_structure']/section[@class='mb16']/div[@class='container']" position="replace">
			<div class="oe_structure">
				<div class="container">
					<section class="oe_snippet_body container mb16" style="background:url(/kdvn_website_structure/static/src/img/default/banner_recuit.jpg) center center; background-size:cover;min-height: 300px;">				
					</section>
				</div>
			</div>
			<div class="container">
				<div class="row">
					<div class="text-center" data-snippet-id="colmd">
						<h2>Our Job Offers</h2>
					</div>
				</div>
			</div>
		</xpath>
		<!--Thay ngay write_date thanh date_deadline -->
		<xpath expr="//div[@id='wrap']/div[@class='container oe_website_jobs']/div[@class='row']/div[@id='jobs_grid']/ul[@class='media-list']/li[@class='media']/div[@class='media-body']/div[@class='text-muted']" position="replace">
			<div class="text-muted">
				<i class="fa fa-clock-o"/> <span>Deadline : </span><span t-field="job.date_deadline" t-field-options='{"format":"dd-MM-y"}'/><br />
				<i class="fa fa-star"/> <span>Code : </span><span t-field="job.code"/><br />
				<i class="fa fa-link"/> <span>Link : <a t-attf-href="#{job.job_link}" target="_blank">Job link</a></span>
			</div>
		</xpath>
	</template>
	<template id="kdvn_str_jobs_detail" name="Kdvn Theme Jobs detail" inherit_id="website_hr_recruitment.detail">
		<xpath expr="//div[@id='wrap']/div[@class='oe_structure']" position="replace">
			<div class="oe_structure">
				<div class="container">
					<section class="oe_snippet_body container mb16" style="background:url(/kdvn_website_structure/static/src/img/default/banner_recuit.jpg) center center; background-size:cover;min-height: 300px;">				
					</section>
				</div>
			</div>
		</xpath>
		<!--Thay ngay write_date thanh date_deadline -->
		<xpath expr="//div[@id='wrap']/div[@class='oe_structure']/h5[@class='text-center text-muted']" position="replace">
			<h5 class="text-center text-muted">
                <i class="fa fa-clock-o"/> <span>Deadline : </span><span t-field="job.date_deadline" t-field-options='{"format":"dd-MM-y"}'/>
            </h5>
		</xpath>
		<!--Dua noi dung vao class container-->
		<xpath expr="//div[@id='wrap']/div[@t-field='job.website_description']" position="replace">
			<section class="mt16 mb16">
				<div class="container">
					<div class="row">
						<div class="col-md-2"/>
						<div class="col-md-8">
							<table border="0" cellpadding="0" cellspacing="0" width="100%">
								<tbody>
									<tr class="kdvn-str-hr-tr">
										<td class="kdvn-str-hr-td-title"><strong>Job Title:</strong></td>
										<td class="kdvn-str-hr-td-content"><strong><div t-field="job.name"/></strong></td>
									</tr>
									<tr class="kdvn-str-hr-tr" >
										<td class="kdvn-str-hr-td-title"><strong>Job Code:</strong></td>
										<td class="kdvn-str-hr-td-content"><div t-field="job.code"/></td>
									</tr>
									<tr class="kdvn-str-hr-tr">
										<td class="kdvn-str-hr-td-title"><strong>Job Description:</strong></td>
										<td class="kdvn-str-hr-td-content"><div t-field="job.description"/></td>
									</tr>
									<tr class="kdvn-str-hr-tr">
										<td class="kdvn-str-hr-td-title"><strong>Job Requirement:</strong></td>
										<td class="kdvn-str-hr-td-content"><div t-field="job.requirements"/></td>
									</tr>
									<tr class="kdvn-str-hr-tr">
										<td class="kdvn-str-hr-td-title"><strong>Preferred language:</strong></td>
										<td class="kdvn-str-hr-td-content"><div t-field="job.job_language_id.name"/></td>
									</tr>
									<tr class="kdvn-str-hr-tr">
										<td class="kdvn-str-hr-td-title"><strong>Job Level:</strong></td>
										<td class="kdvn-str-hr-td-content"><div t-field="job.job_level_id.name"/></td>
									</tr>
									<tr class="kdvn-str-hr-tr">
										<td class="kdvn-str-hr-td-title"><strong>Work Place:</strong></td>
										<td class="kdvn-str-hr-td-content"><div t-field="job.job_work_place_id.name"/></td>
									</tr>
								</tbody>
							</table>
						</div>
						<div class="col-md-2"/>
					</div>
				</div>
			</section>
		</xpath>
	</template>	
	<template id="kdvn_str_jobs_apply" name="Kdvn Theme Jobs apply" inherit_id="website_hr_recruitment.apply">
		<xpath expr="//div[@id='wrap']/div[@class='container']" position="before">
			<div class="oe_structure">
				<div class="container">
					<section class="oe_snippet_body container" style="background:url(/kdvn_website_structure/static/src/img/default/banner_recuit.jpg) center center; background-size:cover;min-height: 300px;">				
					</section>
				</div>
			</div>
		</xpath>
	</template>
</data>
</openerp>