					<!-- Tin moi va cac du an -->
					<section>
						<div class="container">
							<!-- Brief introduction -->
							<div class="row">
								<div class="col-md-3">
									<h4 class="text-success">Lastest News</h4>
									<p></p>
									<!-- News: Option to show on/off in customize menu-->
									<div id="kdvn_news">
