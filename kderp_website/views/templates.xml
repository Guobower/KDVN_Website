				<!-- <t t-set="news_head" t-value="'KINDEN VN News'"></t>-->
			</t>
			<t t-if="post0.blog_id.name == 'Quality Safety Assurance'">
				<t t-set="jumbo" t-value="'qa_jumbo'"></t>
				<!-- <t t-set="news_head" t-value="'KINDEN VN QA'"></t>-->
			</t>
		</t>
		<t t-call="kderp_website.{{jumbo}}"></t>
	</template>
	
