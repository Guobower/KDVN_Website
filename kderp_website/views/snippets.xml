<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="snippets" inherit_id="website.snippets" name="KDVN default snippets">
			<xpath expr="//div[@id='snippet_structure']" position="inside">
				<div>
					<div class="oe_snippet_thumbnail">
						<img class="oe_snippet_thumbnail_img" src="/kderp_website/static/src/img/icons/heart-o_ffffff_100.png"></img>
						<span class="oe_snippet_thumbnail_title">Hello</span>
					</div>
					<section class="oe_snippet_body">
						<div class="container">
							<div class="jumbotron">
								<h1>Hello World</h1>
								<h2 class="text-danger">From KDVN</h2>
							</div>
						</div>
					</section>
				</div>
				
				<div>
					<div class="oe_snippet_thumbnail">
						<img class="oe_snippet_thumbnail_img" src="/kderp_website/static/src/img/icons/heart-o_ffffff_100.png"></img>
						<span class="oe_snippet_thumbnail_title">About us</span>
					</div>
					<section class="oe_snippet_body">
						<div class="container">
							<div class="row">
								<div class="col-md-4 text-center">
									<img class="img-rounded" src="" width="200" height="140"></img> 
									<h2 class="text-success">Electrical</h2>
									<p>Something about KINDEN VIETNAM electrical</p>
								</div>
								<div class="col-md-4 text-center">
									<img class="img-rounded" src="" width="200" height="140"></img> 
									<h2 class="text-success">Mechanical</h2>
									<p>Something about KINDEN VIETNAM mechanical</p>
								</div>
								<div class="col-md-4 text-center">
									<img class="img-rounded" src="" width="200" height="140"></img> 
									<h2 class="text-success">Quality, Safety and Training</h2>
									<p>Something about KINDEN VIETNAM QSA</p>
								</div>

							</div>
						</div>
					</section>
				</div>
			</xpath>
		</template>	
	</data>
</openerp>
