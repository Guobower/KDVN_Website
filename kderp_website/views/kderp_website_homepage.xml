		<!-- List Post Home Page -->
		<template id="list_posts_homepage" name="KDVN List posts">
			<div class="container">
				<!-- Posts -->
				<div class="row">
					<t t-if="request.httprequest.path in ['/page/homepage']">
					<table class="table">
						<tbody>
							<t t-foreach="posts" t-as="post">
							<tr>
								<td class="news-date-hompage"><span t-field="post.create_date" t-field-options='{"format": "MMM, dd y"}'></span></td>
								<!-- Setting fa value -->
								<t t-if="post.img_url_ids">
									<t t-if="post.img_url_ids[0].name[-3:] == 'pdf'">
										<t t-set="fa_value" t-value="'fa-file-pdf-o'"></t>
									</t>
									<t t-if="post.img_url_ids[0].name[-3:] == 'doc'">
										<t t-set="fa_value" t-value="'fa-file-word-o'"></t>
									</t>
									<t t-if="post.img_url_ids[0].name[-3:] == 'xls'">
										<t t-set="fa_value" t-value="'fa-file-excel-o'"></t>
									</t>
									<t t-if="post.img_url_ids[0].name[-3:] not in ['pdf', 'doc', 'xls']">
										<t t-set="fa_value" t-value="'fa-file-image-o'"></t>
									</t>
								</t>
								<td class="news-name-homepage" style="border-top: 1px solid #FFF;"><span t-if="post.img_url_ids" t-attf-class="fa {{fa_value}}"></span><a t-attf-href="{{'/intro/news' if request.httprequest.path == '/page/homepage' else request.httprequest.path}}/{{slug(post)}}"> 
									<t t-raw="post.name[:40].title()"></t>
									<t t-if="post.name[41:]"><span>...</span></t></a>
								</td>
							</tr>
							</t>
						</tbody>
					</table>
					</t>	
				</div>					
			</div>
		</template>
