<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="website.homepage" name="KDVN Homepage" page="True"
			priority="10">
			<t t-call="website.layout">
				<div id="wrap" class="oe_structure oe_empty">
					<section>
						<div class="container">
							<div class="row">
								<h1>WELCOME KINDEN VIETNAM</h1>
							</div>
						</div>
					</section>
				</div>
			</t>
		</template>

		<template id="contacts" name="Contacts">
			<t t-call="website.layout">
				<t t-set="title">Contacts</t>
				<div class="oe_structure">
					<div class="container">
						<t t-foreach="res_company.partner_id.child_ids" t-as="contact">
							<t t-if="contact_even">
								<div class="col-md-8">
									<h4 class="mt16">
										<t t-esc="contact.name"></t>
									</h4>
									<p>
										<t t-esc="contact.street"></t>
										<br />
										<t t-esc="contact.street2"></t>
										<br />
										Tel:
										<t t-esc="contact.phone"></t>
										* Fax:
										<t t-esc="contact.fax"></t>
										<br />
										<a href="http://www.kinden.co.jp/english">KINDEN Corp.</a>
									</p>
								</div>
							</t>
							<t t-if="contact_odd">
								<div class="col-md-4">
									<h4 class="mt16">
										<t t-esc="contact.name"></t>
									</h4>
									<p>
										<t t-esc="contact.street"></t>
										<br />
										<t t-esc="contact.street2"></t>
										<br />
										Tel:
										<t t-esc="contact.phone"></t>
										* Fax:
										<t t-esc="contact.fax"></t>
									</p>
								</div>
							</t>
						</t>
					</div>
				</div>
			</t>
		</template>

