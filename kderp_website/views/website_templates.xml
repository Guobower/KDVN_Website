<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="homepage" name="KDVN Homepage" inherit_id="website.homepage">
            <xpath expr="//div[@id='wrap']" position="inside">
                
            </xpath>
            
        </template>
        
        <template id="contacts" name="Contacts">
            <t t-call="website.layout">
                <t t-set="title">Contacts</t>
                <div class="oe_structure">
                    <div class="container">
                        <t t-foreach="res_company.partner_id.child_ids" t-as="contact">
		                        <div class="col-md-6">
		                            <h4 class="mt16"><t t-esc="contact.name"></t></h4>
		                            <p>
		                                <t t-esc="contact.street"></t>
		                                <br/><t t-esc="contact.street2"></t>
		                                <br/>Tel: <t t-esc="contact.phone"></t> * Fax: <t t-esc="contact.fax"></t>
		                                <br/><a href="http://www.kinden.co.jp/english">KINDEN Corp.</a>		                                
		                            </p>
		                        </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>
        
        
        
        <template id="kdvn_footer_custom" inherit_id="website.footer_custom" name="KDVN Footer">
        	<xpath expr="//div[@id='footer']" position="replace">
        		<div class="oe_structure" if="footer">
        			<div class="oe_strucutre">
        				<div class="container">
	                       	<t t-foreach="res_company.partner_id.child_ids" t-as="contact">
			                        <div class="col-md-6">
			                            <h4 class="mt16"><t t-esc="contact.name"></t></h4>
			                            <p>
			                                <t t-esc="contact.street"></t>
			                                <br/><t t-esc="contact.street2"></t>
			                                <br/>Tel: <t t-esc="contact.phone"></t> * Fax: <t t-esc="contact.fax"></t>
			                                <br/><a href="http://www.kinden.co.jp/english">KINDEN Corp.</a>		                                
			                            </p>
			                        </div>
	                        </t>        				
        				</div>
        			</div>
        		</div>
        	</xpath>
        </template>
        
        
        <template id="contactus" name="Contact KDVN" inherit_id="website.contactus">
            <xpath expr="//div[p]" position="replace">
                <div>
	            	<p>Contact KINDEN VIETNAM for further information.</p>
				    <p>We'll do our best to get back to you as soon as possible.</p>
			    </div>
		    </xpath>
		</template>

