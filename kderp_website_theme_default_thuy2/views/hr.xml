<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
	<!-- hr.job -->
	<record id="view_kdvn_hr_job_form" model="ir.ui.view">
        <field name="name">kdvn.hr.job.form.inherit</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="website_hr_recruitment.view_hr_job_form"/>
        <field name="arch" type="xml">
            <!-- add state field in header -->
			<div class="oe_title" position='replace'>
				<div class="oe_title">
					<label for="name" class="oe_edit_only"/>
					<h1>
						<field name="code" class="oe_inline"/> - 
						<field name="name" class="oe_inline"/>
					</h1>
				</div>
			</div>
			<field name='department_id' position='replace'>
				<field name='department_id' on_change="new_code(department_id,date_input)"/>
			</field>
           	<field name='department_id' position='before'>
                <field name="date_input" on_change="new_code(department_id,date_input)"/>
                <field name="date_deadline"/>
            </field>
			<xpath expr="//group[@name='employee_data']/div[1]" position="after">
				<field name="job_language_id"/>
				<field name="job_lever_id"/>
				<field name="job_work_place_id"/>
			</xpath>
			<div attrs="{'invisible': [('state', '!=', 'recruit')]}" position='replace'>
				<div>
					<label for="description"/>
					<field name="description"/>	
				</div>
			</div>
			<div attrs="{'invisible': [('state', '!=', 'recruit')]}" position='replace'>  
				<div>
					<label for="requirements"/>
					<field name="requirements"/>	
				</div>					
            </div>
        </field>
    </record>
    <record id="view_kdvn_hr_job_tree" model="ir.ui.view">
        <field name="name">kdvn.hr.job.tree.inherit</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_tree"/>
        <field name="arch" type="xml">
        	<field name="name" position="before">
        		<field name="code"/>
        	</field>
        </field>
    </record>
	 <!-- hr.department -->
	<record id="view_kderp_department_form" model="ir.ui.view">
		<field name="name">hr.kderp.department.form</field>
		<field name="model">hr.department</field>
		<field name="inherit_id" ref="hr.view_department_form"/>
        <field name="arch" type="xml">
            <!-- add state field in header -->
			<field name="name" position='before'>
				<field name="code" string="Job code"/>
			</field>
			<field name="parent_id" position='after'>
				<field name="manager_2nd_id"/>
			</field>
		</field>
	</record>
	<!-- Show KDVN Job Language"-->
	<record id="view_kderp_hr_job_language_form" model="ir.ui.view">
        <field name="name">kderp.hr.job.language.form</field>
        <field name="model">kderp.hr.job.language</field>
        <field name="arch" type="xml">
            <form string="Job Language">
				<sheet>
					<group col="4">
						<field name="name"/>
						<field name="description"/>
						<field name="sequence"/>
					</group>
				</sheet>
			</form>
        </field>
    </record>
	<record id="view_kderp_hr_job_language_tree" model="ir.ui.view">
        <field name="name">kderp.hr.job.language.tree</field>
        <field name="model">kderp.hr.job.language</field>
        <field name="arch" type="xml">
            <tree string="Job Language">
				<field name="name"/>
			</tree>
        </field>
    </record>
	
	<!-- Show KDVN Job Lever"-->
	<record id="view_kderp_hr_job_lever_form" model="ir.ui.view">
        <field name="name">kderp.hr.job.lever.form</field>
        <field name="model">kderp.hr.job.lever</field>
        <field name="arch" type="xml">
            <form string="Job lever">
				<sheet>
					<group col="4">
						<field name="name"/>
						<field name="description"/>
						<field name="sequence"/>
					</group>
				</sheet>
			</form>
        </field>
    </record>
	<record id="view_kderp_hr_job_lever_tree" model="ir.ui.view">
        <field name="name">kderp.hr.job.lever.tree</field>
        <field name="model">kderp.hr.job.lever</field>
        <field name="arch" type="xml">
            <tree string="Job Language">
				<field name="name"/>
			</tree>
        </field>
    </record>
	
	<!-- Show KDVN Job Work Place"-->
	<record id="view_kderp_hr_job_work_place_form" model="ir.ui.view">
        <field name="name">kderp.hr.job.work.place.form</field>
        <field name="model">kderp.hr.job.work.place</field>
        <field name="arch" type="xml">
            <form string="Job Word Place">
				<sheet>
					<group col="4">
						<field name="name"/>
						<field name="description"/>
						<field name="sequence"/>
					</group>
				</sheet>
			</form>
        </field>
    </record>
	<record id="view_kderp_hr_job_work_place_tree" model="ir.ui.view">
        <field name="name">kderp.hr.job.work.place.tree</field>
        <field name="model">kderp.hr.job.work.place</field>
        <field name="arch" type="xml">
            <tree string="Job Word Place">
				<field name="name"/>
			</tree>
        </field>
    </record>
	<!--========================-->
	<record model="ir.actions.act_window" id="kdvn_jobs_act">
		<field name="name">Job Positions</field>
		<field name="res_model">hr.job</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form,kanban</field>
	</record>
	<record model="ir.actions.act_window" id="kdvn_applications_act">
		<field name="name">Applications</field>
		<field name="res_model">hr.applicant</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form,kanban</field>
	</record>
	
	<record model="ir.actions.act_window" id="kdvn_departments_act">
		<field name="name">Departments</field>
		<field name="res_model">hr.department</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>
	
	<record model="ir.actions.act_window" id="kdvn_hr_job_language_act">
		<field name="name">Job language</field>
		<field name="res_model">kderp.hr.job.language</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>
	<record model="ir.actions.act_window" id="kdvn_hr_job_word_place_act">
		<field name="name">Job Lever</field>
		<field name="res_model">kderp.hr.job.work.place</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>
	<record model="ir.actions.act_window" id="kdvn_hr_job_lever_act">
		<field name="name">Job Word Place</field>
		<field name="res_model">kderp.hr.job.lever</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
	</record>
	
	<menuitem id="kdvn_menu_recruitment" name="Recruitment" parent="kderp_website.main_kdvn_website" sequence="28"/>
	<menuitem id="kdvn_job" name="Job Positions" parent="kdvn_menu_recruitment" action="kdvn_jobs_act"/>
	<menuitem id="kdvn_applications" name="Applications" parent="kdvn_menu_recruitment" action="kdvn_applications_act"/>
	
	<menuitem id="kderp_website_config_recruitment" name="Recruitment" parent="kderp_website.kdvn_website_config"/>
	<menuitem id="kdvn_departments" name="Departments" parent="kderp_website_config_recruitment" action="kdvn_departments_act"/>
	<menuitem id="kdvn_job_language" name="Job Language" parent="kderp_website_config_recruitment" action="kdvn_hr_job_language_act"/>
	<menuitem id="kdvn_job_lever" name="Job Level" parent="kderp_website_config_recruitment" action="kdvn_hr_job_lever_act"/>
	<menuitem id="kdvn_job_word_place" name="Job Work Place" parent="kderp_website_config_recruitment" action="kdvn_hr_job_word_place_act"/>
</data>
</openerp>
