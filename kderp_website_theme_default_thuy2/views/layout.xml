<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<!-- Ke thua module kderp_website de bo lua chon ngon ngu o footer-->
		<template id="kderp_website_theme_default_thuy2.layout_footer_copyright" inherit_id="kderp_website.layout_footer_copyright" priority="10" name="KDVN Thuy2 Footer Copyright">
			<xpath expr="//div[@class='container mb8 text-kdvn']" position="replace">
				<div class="container mb8 text-kdvn">
					<div class="row" style="border-top: 1px solid;">
						<div class="col-md-8">
				            <div class="pull-left" itemscope="itemscope" itemtype="http://schema.org/Organization">
			    	            Copyright <span class="fa fa-copyright"></span> <span t-field="res_company.name" itemprop="name">Company name</span>
			        	    </div>
						</div>
					</div>
				</div>
			</xpath>
		</template>
		
		<!-- Ke thua module kderp_website de them city ra footer-->
		<template id="kderp_website_theme_default_thuy2.kdvn_footer_custom" inherit_id="kderp_website.kdvn_footer_custom" name="KDVN Thuy2 Footer">
			<xpath expr="//div[@id='footer']" position="replace">
				<div class="container" id="footer">
					<div class="row">
						<!-- TODO: Finding a better way to filter the data -->
						<t t-foreach="res_company.partner_id.child_ids[3:5]" t-as="contact">
							<div t-attf-class="col-sm-{{8 - (contact_index % 2) * 4}}">
								<address>
								<h4 class="text-danger"><t t-esc="contact.name"></t></h4>
								<t t-esc="contact.street"></t><br />
								<t t-esc="contact.street2"></t><br />
								<t t-esc="contact.city"></t><br />					
								<span class="fa fa-phone"></span> <t t-esc="contact.phone"></t><br/>
								<span class="fa fa-fax"></span> <t t-esc="contact.fax"></t>
								</address>
							</div>
						</t>
					</div>
				</div>
			</xpath>
		</template>
	</data>
</openerp>