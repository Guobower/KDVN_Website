<?xml version="1.0" encoding="utf-8" ?>
<openerp>
<data>
	<!--===header===-->
	<!--LOGO OHSAS-->
	<template id="kderp_website_theme_default_thuy2.wrapwrap" name="KDVN Thuy2 header" inherit_id="website.layout">
		<xpath expr="//div[@class='container']/div[@class='navbar-header']" position="inside">
			<img src=" /website/image/ir.attachment/1886_9df23f4/datas/50x50" alt="Logo of OHSAS" title="OHSAS"/>
		</xpath>
		<xpath expr="//div[@class='container']" position="before">
			<div class="container" style="padding-top: 15px; padding-bottom: 15px;">
				<!--dua logo kinden vietnam len tren-->
				<div class="brand">
					<a href="/" class="logo">
						<img src="/kderp_website_theme_default/static/src/img/logo.png" het-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
					</a>
					<span><img src=" /website/image/ir.attachment/1886_9df23f4/datas/50x50" alt="Logo of OHSAS" title="OHSAS"/></span>
				</div>
				<!-- hien thu ten cong ty va sdt -->
				<div class="brand-left">
					<p style="color: #7c7c7c; margin: 0px;">KINDEN VIETNAM CORPORATION</p>
					<t t-foreach="res_company.partner_id.child_ids[3:4]" t-as="contact">
						<div >
							<address style="margin-bottom: 0px;">
							<span class="fa fa-phone"></span> <t t-esc="contact.phone"></t><br/>
							<span class="fa fa-fax"></span> <t t-esc="contact.fax"></t>
							</address>
						</div>
					</t>
				</div>
			</div>
		</xpath>
		<xpath expr="//header/div[@class='navbar navbar-custom navbar-static-top']/div[@class='container']/div[@class='collapse navbar-collapse navbar-top-collapse']/ul[contains(@class, 'nav navbar-nav navbar-right')]" position="attributes">
			<attribute name="class">nav navbar-nav</attribute>
		</xpath>
	</template>

